<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="4dp"
    android:layout_marginTop="12dp"
    android:layout_marginEnd="4dp"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingTop="4dp"
    android:paddingBottom="4dp"
    android:weightSum="11">

    <TextView
        android:id="@+id/active_serial"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="4"
        android:gravity="center"
        android:textSize="16sp"
        tool:text="Serial" />

    <TextView
        android:id="@+id/active_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="3"
        android:gravity="center"
        android:textSize="16sp"
        tool:text="Name" />

    <Spinner
        android:id="@+id/active_name_list"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="3"
        android:gravity="center"
        android:visibility="gone" />

    <TextView
        android:id="@+id/active_articul"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="2"
        android:gravity="center"
        android:textSize="16sp"
        tool:text="Articul" />

    <ImageView
        android:id="@+id/btn_scan_edit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:background="@drawable/button_fix"
        android:clickable="true"
        android:contentDescription="@string/default_image_description"
        android:focusable="true"
        android:src="@drawable/ic_create" />

    <ImageView
        android:id="@+id/btn_scan_del"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:background="@drawable/button_del"
        android:clickable="true"
        android:contentDescription="@string/default_image_description"
        android:focusable="true"
        android:src="@drawable/ic_back" />

    <ImageView
        android:id="@+id/btn_scan_ok"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:background="@drawable/button_add"
        android:clickable="true"
        android:contentDescription="@string/default_image_description"
        android:focusable="true"
        android:src="@drawable/ic_ok"
        android:visibility="gone" />

</LinearLayout>