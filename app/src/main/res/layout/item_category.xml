<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="4dp"
    android:layout_marginTop="12dp"
    android:layout_marginEnd="4dp"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingTop="4dp"
    android:paddingBottom="4dp"
    android:weightSum="11">

    <TextView
        android:id="@+id/item_cat_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="4dp"
        android:layout_weight="9"
        android:gravity="center"
        android:textSize="16sp"
        tool:text="Brand" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/item_cat_et_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="9"
        android:hint="@string/item_cat_hint"
        android:textSize="16sp"
        android:visibility="gone">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/item_cat_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:textSize="16sp" />

    </com.google.android.material.textfield.TextInputLayout>

    <ImageView
        android:id="@+id/btn_item_cat_edit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:background="@drawable/button_fix"
        android:clickable="true"
        android:contentDescription="@string/default_image_description"
        android:focusable="true"
        android:src="@drawable/ic_create" />

    <ImageView
        android:id="@+id/btn_item_cat_del"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:background="@drawable/button_del"
        android:clickable="true"
        android:contentDescription="@string/default_image_description"
        android:focusable="true"
        android:src="@drawable/ic_back" />

    <ImageView
        android:id="@+id/btn_item_cat_ok"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:background="@drawable/button_add"
        android:clickable="true"
        android:contentDescription="@string/default_image_description"
        android:focusable="true"
        android:src="@drawable/ic_ok"
        android:visibility="gone" />

</LinearLayout>